def shared_pods
	pod 'Alamofire', '~> 4.5'
    pod 'AlamofireImage', '~> 3.3'
    
    pod 'Firebase/Core'
    pod 'FirebaseAuth'
    pod 'Firebase/Messaging'
    pod 'Firebase/Performance'
    pod 'GoogleSignIn'
    
    pod 'Fabric', '~> 1.7.6'
    pod 'Crashlytics', '~> 3.10.1'
    
    pod 'ViewAnimator'
    pod 'RealmSwift'
    pod 'ObjectMapper+Realm'
	pod 'SwiftyJSON'
    pod 'ObjectMapper'
    pod 'SwiftyUserDefaults'

    pod 'NVActivityIndicatorView'
    
end

target 'RickMorty' do
    shared_pods
end
